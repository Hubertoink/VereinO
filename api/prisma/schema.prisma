// Prisma schema (initial cut) for Postgres
// Run with DATABASE_URL env var pointing to Compose Postgres

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String?
  password  String    // hashed
  role      Role      @default(CASHIER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum Role {
  ADMIN
  CASHIER
  VIEWER
}

model Voucher {
  id            Int       @id @default(autoincrement())
  date          DateTime
  type          VoucherType
  sphere        Sphere
  description   String?
  paymentMethod PaymentMethod?
  netAmount     Decimal?  @db.Decimal(12, 2)
  vatRate       Decimal?  @db.Decimal(5, 2)
  grossAmount   Decimal?  @db.Decimal(12, 2)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum VoucherType { IN OUT TRANSFER }

enum Sphere { IDEELL ZWECK VERMOEGEN WGB }

enum PaymentMethod { BAR BANK }

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  entity    String
  entityId  Int?
  action    String
  diffJson  Json?
  createdAt DateTime @default(now())
}
